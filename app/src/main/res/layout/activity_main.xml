<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--顶部导航栏-->
        <RelativeLayout
            android:id="@+id/nav_relative"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#000">
        <ImageView
            android:id="@+id/nav_manager"
            android:layout_width="35.5dp"
            android:layout_height="35.5dp"
            android:layout_margin="5dp"
            android:src="@drawable/nav_manager"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/nav_manager"
            android:gravity="center_vertical"
            android:text="天气预报"
            android:textSize="24sp"
            android:textColor="#fff"/>
        <ImageView
            android:id="@+id/nav_locate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7.5dp"
            android:layout_toLeftOf="@id/nav_update"
            android:src="@drawable/nav_locate"/>
        <ImageView
            android:id="@+id/nav_update"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_margin="7dp"
            android:layout_toLeftOf="@id/nav_share"
            android:src="@drawable/nav_update"/>
        <ImageView
            android:id="@+id/nav_share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8.5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/nav_share"/>
        </RelativeLayout>

        <!--今天天气状况-->
        <RelativeLayout
            android:id="@+id/today_content_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_relative"
            android:background="@drawable/main_background2">
            <RelativeLayout
                android:id="@+id/today_info1_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--城市、更新时间、湿度-->
                <LinearLayout
                    android:id="@+id/today_info1_linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/today_info1_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="#fff"
                        android:textSize="47sp"/>
                    <TextView
                        android:id="@+id/today_info1_updateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更新时间6:30"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/today_info1_humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度57%"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!--PM2.5图标-->
                <LinearLayout
                    android:id="@+id/today_info1_linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/today_info1_linear3">

                    <ImageView
                        android:id="@+id/today_info1_pm25img"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:src="@drawable/pm25"/>
                </LinearLayout>

                <!--PM2.5状况-->
                <LinearLayout
                    android:id="@+id/today_info1_linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM2.5"
                        android:textColor="#fff"
                        android:textSize="27sp"/>
                    <TextView
                        android:id="@+id/today_info1_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/today_info1_pm25status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重度污染"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/today_info2_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/today_info1_relative"
                android:layout_marginTop="160dp">

                <!--天气图标-->
                <LinearLayout
                    android:id="@+id/today_info2_linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/today_info2_weatherStatusImg"
                        android:layout_width="155dp"
                        android:layout_height="128dp"
                        android:src="@drawable/weather_qing"/>
                </LinearLayout>

                <!--今日天气状况-->
                <LinearLayout
                    android:id="@+id/today_info2_linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/today_info2_linear1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天 星期三"
                        android:textColor="#fff"
                        android:textSize="27sp"/>
                    <TextView
                        android:id="@+id/today_info2_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8℃～15℃"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/today_info2_weatherStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晴"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/today_info2_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微风"
                        android:textColor="#fff"
                        android:textSize="20sp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>